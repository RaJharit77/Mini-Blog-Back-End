{
    "version": 2,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "headers": {
                "Access-Control-Allow-Origin": "https://infinitix-task-manager.vercel.app",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, UPDATE",
                "Access-Control-Allow-Headers": "Content-Type, Authorization"
            },
            "dest": "/api/server.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/*",
            "dest": "/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
